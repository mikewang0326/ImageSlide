<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="3dp"
	android:background="@color/cl_bg_view_flow_item" >
	<ImageView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/ic_online_news_list_item_logo_nor"
	    android:layout_centerInParent="true"
	    android:layout_gravity="center"/>
	<ImageView 
	    android:id="@+id/img"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_centerInParent="true"
	    android:layout_gravity="center"
	    android:scaleType="fitXY" />
	<TextView 
	    android:id="@+id/img_title"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:singleLine="true"
	    android:paddingLeft="5dp"
	    android:paddingRight="30dp"
	    android:gravity="center_vertical"
	    android:textSize="@dimen/ts_base_viewflow_item_cover_label_title"
	    android:textColor="@color/black"
	    android:background="@drawable/bg_base_viewflow_item_cover_label" />
</RelativeLayout>
